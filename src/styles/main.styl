@import './variables'
@import './common'
@import './buttons'
@import './forms'
@import './modal'
@import './tooltip'
@import '../habit-list/habit-list'
@import '../habit-list-item/habit-list-item'
@import '../experience-bar/experience-bar'
@import '../modals/achievement/achievement-modal'
@import '../modals/level-up/level-up-modal'

html, body
  overflow initial
  height auto
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif

body
  font-size 18px
  padding 0
  padding-bottom 2rem
  color color-text

  *
    box-sizing border-box

h1, h2, h3, h4, h5, h6
  font-weight normal
  margin 0
  padding 0
  color color-primary-text

strong
  color color-primary-text

.wrapper
  margin 0 1em

.app-header
  @extends $fill-primary

  .wrapper
    @extends $row
    height 3.5rem
    
    nav
      flex 0 auto
    
  h1
    color white
    margin 0
    font-size 1.2rem

.page-header
  @extends $row
  margin-top 2rem
  h1
    font-size 1.5rem

.page-body
  margin-top 1rem

.thin
  margin 1rem auto 0
  max-width 600px

.primary-form
  margin 0 auto
  width 100%
  max-width 600px

.error-message
  color color-fail

level-indicator
  background color-neutral-background
  border-radius 50%
  width 3rem
  height 3rem
  display flex
  align-items center
  justify-content center

a
  color inherit
  text-decoration none

 nav
  text-align right
  > *
    margin-right .5rem
    &:last-child
      margin-right 0

.page-body a
  color color-link
  text-decoration underline
  
  &.danger
    color color-fail
  
  &.neutral
    color color-neutral

p
  line-height 1.6

[ng-click]
  cursor pointer

+mobile()
  .wrapper 
    margin 0 .5em
  .thin
    max-width initial
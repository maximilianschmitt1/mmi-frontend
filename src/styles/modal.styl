.modal-backdrop
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background rgba(0, 0, 0, .15)
  display flex
  align-items center
  justify-content center

  .modal
    background white
    width 33%
    min-width 600px
    padding 2rem
    border-radius 2px
    box-shadow 0 5px 20px rgba(0, 0, 0, .25)
    margin-top -5rem
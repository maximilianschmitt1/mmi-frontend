button, input[type="submit"]
  line-height 1
  background none
  padding .7em 1em
  border-width 1px
  border-radius 2px
  border-style solid
  border-color color-neutral
  color color-neutral
  &:hover
    color white
    background color-neutral
  
  &.primary
    border-color color-primary
    color color-primary
    &:hover
      color white
      background color-primary
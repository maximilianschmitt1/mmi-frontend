.habit-today-success .day-indicator
  @extends $badge-success

.habit-today-fail .day-indicator
  @extends $badge-fail

.habit-today-pending .day-indicator
  @extends $badge-neutral
  
.habit-list-item.faded
  opacity .25

.habit-list-item:hover
  opacity 1

.habit-list-item
  border-bottom 1px solid color-neutral-background

  .habit-overview
    @extends $row
    padding 1rem 0
    font-size .9rem

    h2
      display inline-block
    
    .habit-name
      display flex
      align-items center
      
    .delete-habit-link
      visibility hidden
      margin-left 1.6rem
      font-size .8rem
    
    .day-indicator
      margin-right .8rem

    level-indicator
      font-size 1rem
      flex 0 0 3rem
      margin-right 1.5rem
      height 3rem

    &:hover h2
      text-decoration underline

  .habit-details
    padding 1rem 0 2rem 0
    margin-left 4.5rem
    > *:first-child
      margin-top 0
    
    h3
      margin-top 2.5rem
      margin-bottom 1rem

  .habit-options
    margin-top 1rem
    text-align left
    font-size .9rem

  experience-bar
    margin-top .7rem
    width 50%

  .activity-status
    visibility hidden
    color color-neutral
  
  &:hover, &.toggled
    .delete-habit-link
      visibility visible
    .activity-status
      visibility visible

.streak-box
  @extends $clearfix
  padding .5rem
  background color-neutral-background

  .day
    width 1.5rem
    height 1.5rem
    margin .25rem
    float left
  
  .day.pending
    background #fff
  
  .day.fail
    background color-fail
    &.today
      border-color darken(color-fail, 30)
  
  .day.success
    background color-success
    border-color color-success
    &.today
      border-color darken(color-success, 30)
  
  .day.today
    border-color color-neutral
    border-width 3px
    border-style solid

.stats
  font-size .9rem
  margin 0
  padding 0
  margin-top 1rem;
  li
    margin-left 1rem
    display inline
    .highlight
      font-weight bold
  li:first-child
    margin 0

.achievements
  img
    opacity .25
    width 45px
    height 45px
    padding .5rem
    border 3px solid color-neutral
    border-radius 2px
    margin-right 1rem
  .achieved
    fill: color-success
    opacity 1
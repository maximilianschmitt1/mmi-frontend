.habit-list
  margin 0
  padding 0
  
  li 
    margin 0
    list-style none

  .habit-list-item
    border-bottom 1px solid color-neutral-background

  .habit-list-item .habit-overview
    @extends $row
    padding 1rem 0
    font-size .9rem
    
    .level
      background white
      flex 0 0 2.5rem
      margin-right 1rem
      height 2.5rem
    &:hover .habit-name
      text-decoration underline
  
  .habit-details
    padding-bottom 1rem
    margin-left 3.5rem
    > *:first-child
      margin-top 0

.activity-success
  color color-success

.activity-fail
  color color-fail

.streak-box
  @extends $clearfix
  margin-top 1rem
  padding .5rem
  background color-neutral-background

  .day
    width 1.5rem
    height 1.5rem
    margin .25rem
    float left
  
  .day.pending
    background #fff
  
  .day.fail
    background color-fail
    &.today
      border-color darken(color-fail, 30)
  
  .day.success
    background color-success
    border-color color-success
    &.today
      border-color darken(color-success, 30)
  
  .day.today
    border-color color-neutral
    border-width 3px
    border-style solid